<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgn"
    android:orientation="vertical"
    android:paddingLeft="40px"
    android:paddingRight="40px">

    <Button
        android:id="@+id/create"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:background="@drawable/home_button_bg"
        android:text="generate QR CODE"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:drawableLeft="@drawable/qr_code"
        android:textColor="@color/white_greyish"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/scan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:background="@drawable/home_button_bg"
        android:text="SCAN QR CODE"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/scanner"
        android:textColor="@color/white_greyish"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectedText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:layout_marginBottom="198dp"
        android:background="@drawable/home_button_bg"
        android:drawableLeft="@drawable/document"
        android:text="CREATE QR CODE FROM last copied TEXT"
        android:textColor="@color/white_greyish"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/home_button_bg"
        android:text="create contact card"
        android:textColor="@color/white_greyish"
        android:textSize="20sp"
        android:drawableLeft="@drawable/visit"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:freezesText="true"
        android:text="QR AND BAR CODE"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="123dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:background="@drawable/barcode" />

</RelativeLayout>