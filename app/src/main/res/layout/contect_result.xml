<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:background="@drawable/bgn"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/stringResult"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:scrollbars="vertical"
        android:text="TextView"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/contactQR"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="74dp" />

    <Button
        android:id="@+id/saveContactQR"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/shareQR"
        android:layout_marginBottom="198dp"
        android:background="@drawable/home_button_bg"
        android:drawableLeft="@drawable/save"
        android:paddingLeft="10dp"
        android:text="Save"
        android:textColor="@color/white_greyish"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/shareQR"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="203dp"
        android:layout_marginStart="203dp"
        android:background="@drawable/home_button_bg"
        android:drawableLeft="@drawable/share"
        android:paddingLeft="10dp"
        android:text="Share"
        android:textColor="@color/white_greyish"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>